---
import Layout from '../components/Layout.astro';
import { getPosts, getUsers } from '../lib/db';

const { runtime } = Astro.locals;
const posts = await getPosts(runtime);
const users = await getUsers(runtime);
---

<Layout title="Welcome to bit2">
  <main class="container">
    <header class="hero">
      <div class="hero-logo">
        <img src="https://bitbons.ai/bit-logo.svg" alt="bit2 logo" class="logo" />
      </div>
      <h1 class="hero-title">
        Welcome to <span class="brand">bit2</span>
      </h1>
      <p class="hero-subtitle">
        The web framework for building fast, content-focused websites with Astro and libSQL.
      </p>
      
      <div class="status-bar">
        <div class="status-item">
          <span class="status-label">Database:</span>
          <span class="status-value">{import.meta.env.DEV ? 'SQLite' : 'Turso'}</span>
        </div>
        <div class="status-item">
          <span class="status-label">Users:</span>
          <span class="status-value">{users.length}</span>
        </div>
        <div class="status-item">
          <span class="status-label">Posts:</span>
          <span class="status-value">{posts.length}</span>
        </div>
      </div>
    </header>

    <section class="content-section">
      <div class="section-header">
        <h2>Recent Posts</h2>
      </div>
      
      {posts.length > 0 ? (
        <div class="posts-grid">
          {posts.map(post => (
            <article class="post-card">
              <h3>{post.title}</h3>
              <p>{post.content}</p>
              <div class="post-meta">
                <span>By {post.user_name}</span>
                <span>{new Date(post.created_at).toLocaleDateString()}</span>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>No posts yet. Run <code>bit2 migrate</code> to seed sample data.</p>
        </div>
      )}
    </section>

    <section class="content-section">
      <div class="section-header">
        <h2>Team Members</h2>
      </div>
      
      {users.length > 0 ? (
        <div class="users-grid">
          {users.map(user => (
            <div class="user-card">
              <div class="user-initial">{user.name.charAt(0)}</div>
              <div class="user-details">
                <h4>{user.name}</h4>
                <p>{user.email}</p>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>No users yet. Run <code>bit2 migrate</code> to seed sample data.</p>
        </div>
      )}
    </section>

    <section class="content-section">
      <div class="section-header">
        <h2>API Endpoints</h2>
      </div>
      
      <div class="api-grid">
        <a href="/api/users.json" target="_blank" class="api-card">
          <div class="api-method">GET</div>
          <div class="api-details">
            <h4>/api/users.json</h4>
            <p>Retrieve all registered users</p>
          </div>
        </a>
        
        <a href="/api/posts.json" target="_blank" class="api-card">
          <div class="api-method">GET</div>
          <div class="api-details">
            <h4>/api/posts.json</h4>
            <p>Get all published posts with author info</p>
          </div>
        </a>
        
        <a href="/about" class="api-card internal">
          <div class="api-method">PAGE</div>
          <div class="api-details">
            <h4>/about</h4>
            <p>Learn more about this application</p>
          </div>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  
  /* Hero Section - Astro Style */
  .hero {
    text-align: center;
    margin-bottom: 6rem;
  }
  
  .hero-logo {
    margin-bottom: 2rem;
  }
  
  .logo {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease;
  }
  
  .logo:hover {
    transform: scale(1.05);
  }
  
  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    color: #fff;
  }
  
  .brand {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 50%, #d97706 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.375rem;
    color: #9ca3af;
    margin: 0 0 3rem 0;
    max-width: 640px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }
  
  .status-bar {
    display: inline-flex;
    gap: 2rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    backdrop-filter: blur(8px);
  }
  
  .status-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }
  
  .status-label {
    color: #9ca3af;
  }
  
  .status-value {
    color: #fff;
    font-weight: 600;
  }
  
  /* Content Sections */
  .content-section {
    margin-bottom: 6rem;
  }
  
  .section-header {
    margin-bottom: 2rem;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #fff;
    margin: 0;
  }
  
  /* Posts Grid */
  .posts-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }
  
  .post-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }
  
  .post-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(251, 191, 36, 0.3);
    transform: translateY(-2px);
  }
  
  .post-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
  }
  
  .post-card p {
    margin: 0 0 1.5rem 0;
    color: #9ca3af;
    line-height: 1.6;
  }
  
  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  /* Users Grid */
  .users-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }
  
  .user-card {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }
  
  .user-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(245, 158, 11, 0.3);
    transform: translateY(-2px);
  }
  
  .user-initial {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 50%, #d97706 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.25rem;
    margin-right: 1rem;
  }
  
  .user-details h4 {
    margin: 0 0 0.25rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: #fff;
  }
  
  .user-details p {
    margin: 0;
    color: #9ca3af;
    font-size: 0.9rem;
  }
  
  /* API Grid */
  .api-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .api-card {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .api-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(251, 191, 36, 0.3);
    transform: translateY(-2px);
  }
  
  .api-card.internal:hover {
    border-color: rgba(245, 158, 11, 0.3);
  }
  
  .api-method {
    background: #f59e0b;
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    margin-right: 1rem;
    min-width: 48px;
    text-align: center;
  }
  
  .api-card.internal .api-method {
    background: #d97706;
  }
  
  .api-details h4 {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
    font-family: 'Courier New', monospace;
  }
  
  .api-details p {
    margin: 0;
    color: #9ca3af;
    font-size: 0.875rem;
  }
  
  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    color: #6b7280;
  }
  
  .empty-state p {
    margin: 0;
    font-size: 1.125rem;
  }
  
  code {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .status-bar {
      flex-direction: column;
      gap: 1rem;
    }
    
    .status-item {
      justify-content: center;
    }
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }
    
    .hero {
      margin-bottom: 4rem;
    }
    
    .content-section {
      margin-bottom: 4rem;
    }
    
    .section-header h2 {
      font-size: 2rem;
    }
    
    .posts-grid,
    .users-grid,
    .api-grid {
      grid-template-columns: 1fr;
    }
    
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>